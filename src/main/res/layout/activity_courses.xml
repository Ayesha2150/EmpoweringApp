<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Six-Week Courses Button -->

    <!-- Six-Month Courses Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSixWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="Six-Week Courses"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#001f3f"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toStartOf="@id/btnSixMonth"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <!-- ScrollView for dynamically generated course cards -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSixMonth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Six-Month Courses"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#001f3f"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btnSixWeek"
        app:layout_constraintTop_toTopOf="@id/btnSixWeek"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:id="@+id/scrollCourses"
        android:layout_width="366dp"
        android:layout_height="550dp"
        android:background="#001f3f"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnBackHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSixWeek"
        app:layout_constraintVertical_bias="0.321"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/layoutCourseDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB300"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

    <!-- Back to Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackHome"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#ffd700"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
